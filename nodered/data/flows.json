    {
        "id": "f6e6c5b5403e335c",
        "type": "function",
        "z": "f6f2187d.f17ca8",
        "name": "format critical",
        "func": "// Recupero i dati\nvar topicParts = msg.payload.topic.split(\"/\"); // Divide: sector_1 / line_1 / ...\nvar sector = topicParts[0].replace(\"_\", \" \").toUpperCase(); // Diventa \"SECTOR 1\"\nvar line = topicParts[1].replace(\"_\", \" \").toUpperCase();   // Diventa \"LINE 1\"\nvar engine = msg.payload.engine;\nvar val = msg.payload.value;\n\n// Estraggo il limite dal messaggio di testo originale\n// Il messaggio originale √® tipo: \"... (Limit: 0.23)\"\nvar limitMatch = msg.payload.message.match(/Limit: ([\\d\\.]+)/);\nvar limit = limitMatch ? limitMatch[1] : \"N/A\";\n\n// Seleziono un'icona in base al sensore\nvar iconSensor = \"üì°\";\nif (msg.payload.sensor === \"temperature\") iconSensor = \"üå°Ô∏è\";\nif (msg.payload.sensor === \"vibration\") iconSensor = \"üì≥\";\nif (msg.payload.sensor === \"current\") iconSensor = \"‚ö°\";\n\n// Preparo il messaggio per il nodo Telegram\nmsg.payload = {\n    chatId: msg.targetChatId, \n    type: 'message',\n    content: \"üö®üî• <b>CRITICAL ALARM</b> üî•üö®\\n\\n\" +\n        \"üè≠ <b>ZONA:</b> \" + sector + \" - \" + line + \"\\n\" +\n        \"‚öôÔ∏è <b>MACCHINA:</b> \" + engine + \"\\n\" +\n        iconSensor + \" <b>SENSORE:</b> \" + msg.payload.sensor.toUpperCase() + \"\\n\\n\" +\n        \"üìà <b>RILEVATO:</b> \" + val + \"\\n\" +\n        \"‚õî <b>LIMITE MAX:</b> \" + limit + \"\\n\\n\" +\n        \"‚ÄºÔ∏è <b>INTERVENTO IMMEDIATO RICHIESTO</b>\",\n    options: { parse_mode: \"HTML\" }\n};\nreturn msg;\n",
        "outputs": 1,
        "timeout": 0,
        "noerr": 0,
        "initialize": "",
        "finalize": "",
        "libs": [],
        "x": 1490,
        "y": 440,
        "wires": [
            []
        ]
    },
    {
        "id": "01a150fc477feff9",
        "type": "function",
        "z": "f6f2187d.f17ca8",
        "name": "format warning",
        "func": "// Recupero i dati dal topic\nvar topicParts = msg.payload.topic.split(\"/\");\nvar sector = topicParts[0].replace(\"_\", \" \"); // es: \"sector 1\"\nvar line = topicParts[1].replace(\"_\", \" \");   // es: \"line 3\"\n\n// Recupero il limite (Soglia Warning)\nvar limitMatch = msg.payload.message.match(/Limit: ([\\d\\.]+)/);\nvar limit = limitMatch ? limitMatch[1] : \"N/A\";\n\n// Icona sensore\nvar iconSensor = \"üì°\";\nif (msg.payload.sensor === \"temperature\") iconSensor = \"üå°Ô∏è\";\nif (msg.payload.sensor === \"vibration\") iconSensor = \"üì≥\";\nif (msg.payload.sensor === \"current\") iconSensor = \"‚ö°\";\n\nmsg.payload = {\n    chatId: msg.targetChatId, // prende l'id del gruppo del suo settore impostato  \n    type: 'message',\n    content: \"‚ö†Ô∏è <b>Avviso Manutenzione</b> ‚ö†Ô∏è\\n\" +\n        \"<i>Rilevata anomalia non critica</i>\\n\\n\" +\n        \"üìç <b>Dove:</b> \" + sector + \", \" + line + \"\\n\" +\n        \"üîß <b>Asset:</b> \" + msg.payload.engine + \"\\n\" +\n        iconSensor + \" <b>Sensore:</b> \" + msg.payload.sensor + \"\\n\\n\" +\n        \"üìä <b>Valore Attuale:</b> \" + msg.payload.value + \"\\n\" +\n        \"‚ö†Ô∏è <b>Soglia Warning:</b> \" + limit + \"\\n\\n\" +\n        \"‚ÑπÔ∏è <i>Si consiglia un controllo al prossimo giro.</i>\",\n    options: { parse_mode: \"HTML\" }\n};\nreturn msg;",
